{
    "name": "@garden/garden_be",
    "version": "0.0.1",
    "private": true,
    "nx": {
        "targets": {
            "build": {
                "executor": "@nx/esbuild:esbuild",
                "outputs": [
                    "{options.outputPath}"
                ],
                "defaultConfiguration": "production",
                "options": {
                    "platform": "node",
                    "outputPath": "apps/garden_be/dist",
                    "format": [
                        "cjs"
                    ],
                    "bundle": false,
                    "main": "apps/garden_be/src/main.ts",
                    "tsConfig": "apps/garden_be/tsconfig.app.json",
                    "assets": [
                        "apps/garden_be/src/assets"
                    ],
                    "esbuildOptions": {
                        "sourcemap": true,
                        "outExtension": {
                            ".js": ".js"
                        }
                    }
                },
                "configurations": {
                    "development": {},
                    "production": {
                        "esbuildOptions": {
                            "sourcemap": false,
                            "outExtension": {
                                ".js": ".js"
                            }
                        }
                    }
                }
            },
            "serve": {
                "continuous": true,
                "executor": "@nx/js:node",
                "defaultConfiguration": "development",
                "dependsOn": [
                    "build"
                ],
                "options": {
                    "buildTarget": "garden_be:build",
                    "runBuildTargetDependencies": false
                },
                "configurations": {
                    "development": {
                        "buildTarget": "garden_be:build:development"
                    },
                    "production": {
                        "buildTarget": "garden_be:build:production"
                    }
                }
            }
        }
    },
    "dependencies": {
        "koa": "~2.14.1",
        "koa-bodyparser": "4.4.1",
        "koa-router": "13.0.1"
    },
    "devDependencies": {
        "@nx/node": "21.1.3",
        "@nx/esbuild": "21.1.3",
        "@types/koa": "~2.13.5",
        "@types/node": "20.0.0",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/koa-router": "^7.4.8",
        "@swc-node/register": "~1.9.1",
        "@swc/cli": "~0.6.0",
        "@swc/core": "~1.5.7",
        "@swc/helpers": "~0.5.11",
        "typescript": "~5.7.2"
    }
}
